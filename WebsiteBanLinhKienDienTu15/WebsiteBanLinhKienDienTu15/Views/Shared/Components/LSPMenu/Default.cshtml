
@using WebsiteBanLinhKienDienTu15.Models
@model IEnumerable<LoaiSp>
<div class="col-lg-3">
    <div class="hero__categories">
        <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span>Các loại sản phẩm</span>
        </div>
        @* add loại sp*@
        <ul>
            @foreach(var item in Model)
            {
                <li><a asp-controller="Home" asp-action="SanPhamTheoLoai"
                    asp-route-maloai="@item.Id">@item.Ten</a></li>
            }
        </ul>
    </div>
</div>
